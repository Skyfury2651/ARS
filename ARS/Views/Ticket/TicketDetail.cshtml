@model ARS.Models.Ticket

@{
    ViewBag.Title = "Your Online Ticket-Itinerary";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<link href="~/Content/ticket-detail.css" rel="stylesheet" />

<div class="body container background">
    <div class="container">
        <h2>@ViewBag.Title</h2>
        <div class="row">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Traverler</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">
                            <div class="col-md-6">
                                <span>Passengers</span>
                                <span><strong>Hoang Tran</strong></span>
                            </div>
                            <div class="col-md-6">
                                <span >Reservation number</span>
                                <span><strong>HTL1211</strong></span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>


            <ul class="tickets-list">
                <li>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="airport" scope="col" colspan="4">
                                    <div class="col-md-12">
                                        <i class="fas fa-plane"></i>
                                        <span class="airport-name"> flight - thai airways intl public co ltd (tg) 111 - dec 22,2021</span>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td rowspan="2" class="detail1" scope="row">
                                    <div class="col1">
                                        <span>Thai Airways Intl Public Co Ltd (TG)</span>
                                    </div>
                                    <div class="col1-1">
                                        <div class="col1-2">
                                            <span>Flight number:</span>
                                            <span>Airline code:</span>
                                            <span>Status:</span>
                                            <span>Duration:</span>
                                        </div>
                                        <div class="col1-2">
                                            <strong>TG - 111</strong>
                                            <strong>KAI87M</strong>
                                            <strong>Confirmed</strong>
                                            <strong>1H 15M</strong>
                                        </div>
                                    </div>
                                </td>
                                <td rowspan="1" colspan="2">
                                    <div class="col2">
                                        <div class="col2-1">
                                            <span style="font-weight: normal;">Depart</span>
                                            <span style="font-size: 20px"><strong>CNX</strong></span>
                                        </div>
                                        <div class="col2-1">
                                            <span aria-hidden="true" class="ti-control-play" style="margin-top: 3px;" />
                                        </div>
                                        <div class="col2-1">
                                            <span style="font-weight: normal;">Arrive</span>
                                            <span style="font-size: 20px"><strong>BKK</strong></span>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>

                                </th>
                                <td>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </li>
            </ul>
        </div>
    </div>
</div>