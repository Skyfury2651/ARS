@model IEnumerable<ARS.Models.Flight>

@{
    ViewBag.Title = "Flights List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>

<style>
    #myBtn {
        border: none;
        background-color: #fc9f1c;
    }

    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content */
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    /* The Close Button */
    .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<table id="example1" class="display">
    <thead>
        <tr>
            <th scope="col" style="width: 60px">ID</th>
            <th scope="col">Plane Code</th>
            <th scope="col">From</th>
            <th scope="col">To</th>
            <th scope="col">Seats Available</th>
            <th scope="col">Departure Time</th>
            <th scope="col">Arrival Time</th>
            <th scope="col" hidden></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: center">
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(modelItem => item.planeCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromAirport.CityAirports.First().City.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToAirport.CityAirports.First().City.name)
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(modelItem => item.seatAvaiable)
                </td>
                <td style="text-align: center">
                    @Convert.ToDateTime(@item.departureDate).ToString("dd/MM/yyyy")
                </td>
                <td style="text-align: center">
                    @Convert.ToDateTime(@item.arrivalDate).ToString("dd/MM/yyyy")
                </td>
                <td>
                    @*@Html.ActionLink("Detail", "FlightDetail", new { id = item.id }, new { @style = "color: #fc9f1c" })*@
                    <!-- Trigger/Open The Modal -->
                    <button id="myBtn" data-id="@item.id" data-planeCode="@item.planeCode" data-from="@item.ToAirport.CityAirports.First().Airport.name"
                            data-to="@item.ToAirport.CityAirports.First().Airport.name" data-departure-date="@Convert.ToDateTime(@item.departureDate).ToString("dd/MM/yyyy")"
                            data-arrival-date="@Convert.ToDateTime(@item.arrivalDate).ToString("dd/MM/yyyy")" data-flyTime="@item.flyTime h"
                            data-price="@item.price" data-distance="@item.distance" data-haveStop="@item.haveStop" data-seat-available="@item.seatAvaiable"
                            data-status="@item.status">Detail</button>

                    <!-- The Modal -->
                    <div id="myModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <span class="close">&times;</span>
                            <div class="col-md-12 row">
                                <div class="col-md-6">
                                    <ul>
                                        <li><strong>ID: </strong>@item.id</li>
                                        <li><strong>Plane Code: </strong>@item.planeCode</li>
                                        <li><strong>From: </strong>@item.FromAirport.CityAirports.First().Airport.name</li>
                                        <li><strong>To: </strong>@item.ToAirport.CityAirports.First().Airport.name</li>
                                        <li><strong>Departure date: </strong>@Convert.ToDateTime(@item.departureDate).ToString("dd/MM/yyyy")</li>
                                        <li><strong>Arrivale date: </strong>@Convert.ToDateTime(@item.arrivalDate).ToString("dd/MM/yyyy")</li>
                                        <li><strong>Duration: </strong>@item.flyTime h</li>
                                        <li><strong>Price: </strong>$@item.price</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul>
                                        <li><strong>Distance: </strong>@item.distance</li>
                                        <li><strong>Stop: </strong><span id="have-stop"></span"></li>
                                        <li><strong>Status: </strong><span id="status">@item.status</span></li>
                                        <li><strong>Total seats available: </strong><span id="seat-available">@item.seatAvaiable</span></li>
                                        @*<li style="list-style: none; padding-left: 30px"><strong>Bussiness: </strong>@item.seatAvaiableBusiness</li>
                                        <li style="list-style: none; padding-left: 30px"><strong>First: </strong>@item.seatAvaiableFirst</li>
                                        <li style="list-style: none; padding-left: 30px"><strong>Club: </strong>@item.seatAvaiableClub</li>
                                        <li style="list-style: none; padding-left: 30px"><strong>Smoking: </strong>@item.seatAvaiableSmoking</li>
                                        <li style="list-style: none; padding-left: 30px"><strong>Non-smoking: </strong>@item.seatAvaiableNonSmoking</li>*@
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>

        // Get the modal
        var modal = document.getElementById("myModal");

        // Get the button that opens the modal
        var btn = document.getElementById("myBtn");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on the button, open the modal
        btn.onclick = function () {
            modal.style.display = "block";

        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
}


